{
  "pageObject": {
    "className": "LoginPage",
    "locators": [
      {
        "name": "emailInput",
        "actions": [
          "fill"
        ],
        "selectors": [
          {
            "type": "getByLabel",
            "value": "E-Mail Address"
          }
        ]
      },
      {
        "name": "passwordInput",
        "actions": [
          "fill"
        ],
        "selectors": [
          {
            "type": "getByLabel",
            "value": "Password"
          }
        ]
      },
      {
        "name": "loginButton",
        "actions": [
          "click"
        ],
        "selectors": [
          {
            "type": "getByRole",
            "value": "button",
            "options": {
              "name": "Login"
            }
          }
        ]
      },
      {
        "name": "errorMessage",
        "actions": [
          "textContent"
        ],
        "selectors": [
          {
            "type": "getByText",
            "value": "Warning: No match for E-Mail Address and/or Password."
          }
        ]
      }
    ]
  },
  "testSteps": [
    {
      "action": "navigateToLoginPage",
      "params": []
    },
    {
      "action": "fillEmailInput",
      "params": [
        "invalidEmail@example.com"
      ]
    },
    {
      "action": "fillPasswordInput",
      "params": [
        "wrongPassword"
      ]
    },
    {
      "action": "clickLoginButton",
      "params": []
    },
    {
      "action": "getErrorMessage",
      "params": []
    }
  ]
}